@model UserManagement.Web.Models.Users.UserListViewModel  

<h2>User List</h2>  

<div class="table-responsive">  
    <table class="table table-striped">  
        <thead>  
            <tr>  
                <th>Id</th>  
                <th>Forename</th>  
                <th>Surname</th>  
                <th>Email</th>  
                <th>Account Active</th>  
                <th>Date Of Birth</th>  
                <th style="width: 1px;"></th>  
            </tr>  
        </thead>  
        <tbody>  
            @foreach (var user in Model.Items)  
            {  
                <tr>  
                    <td>  
                        @user.Id  
                    </td>  
                    <td>
                        @user.Forename
                    </td>  
                    <td>
                        @user.Surname
                    </td>  
                    <td>
                        @user.Email
                    </td>  
                    <td>
                        @(user.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        @user.DateOfBirth?.ToString("yyyy-MM-dd")
                    </td>
                    <td>  
                        <div class="dropdown">  
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">  
                                Actions  
                            </button>  
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" asp-action="View" asp-route-id="@user.Id">View</a></li>
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@user.Id">Edit</a></li>
                                <li><a class="dropdown-item" href="#">Delete</a></li>  
                            </ul>  
                        </div>  
                    </td>
                </tr>  
            }  
        </tbody>  
    </table>  
</div>  

<div>  
    <div class="btn-group" role="group">  
        <a asp-controller="Users" asp-action="List" class="btn btn-default">Show All</a>  
        <a asp-controller="Users" asp-action="List" asp-route-isActive="true" class="btn btn-default">Active Only</a>  
        <a asp-controller="Users" asp-action="List" asp-route-isActive="false" class="btn btn-default">Non Active</a>  
    </div>  

    <a asp-controller="Users" asp-action="Add" class="btn btn-primary float-end">  
        Add User  
    </a>  
</div>
