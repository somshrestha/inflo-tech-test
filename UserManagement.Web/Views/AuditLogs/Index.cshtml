@model UserManagement.Web.Models.AuditLogs.AuditLogListViewModel

<h2>Audit Logs</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="form-group mb-2">
                <input type="text" name="search" value="@Model.SearchQuery" class="form-control" placeholder="Search logs..."/>
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <select name="actionType" class="form-control">
                    <option value="">All Actions</option>
                    <option value="Create" selected="@(Model.ActionTypeFilter == "Create")">Create</option>
                    <option value="Update" selected="@(Model.ActionTypeFilter == "Update")">Update</option>
                    <option value="Delete" selected="@(Model.ActionTypeFilter == "Delete")">Delete</option>
                    <option value="View" selected="@(Model.ActionTypeFilter == "View")">View</option>
                </select>
            </div>
            <input type="hidden" name="page" value="1"/>
            <input type="hidden" name="sortDescending" value="@Model.SortDescending" />
            <button type="submit" class="btn btn-primary mb-2">Filter</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-page="@Model.CurrentPage" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchQuery"
                       asp-route-actionType="@Model.ActionTypeFilter" asp-route-sortDescending="@(!Model.SortDescending)">Timestamp @(Model.SortDescending ? "↓" : "↑")</a>
                </th>
                <th>User ID</th>
                <th>Action</th>
                <th>Details</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="5">No audit logs found.</td>
                </tr>
            }
            else
            {
                @foreach (var log in Model.Items)
                {
                    <tr>
                        <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.UserId</td>
                        <td>@log.ActionType</td>
                        <td>@(log.Details != null && log.Details.Length > 50 ? log.Details.Substring(0, 50) + "..." : log.Details)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-12">
        <nav>
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchQuery" asp-route-actionType="@Model.ActionTypeFilter" asp-route-sortDescending="@Model.SortDescending">Previous</a>
                </li>
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchQuery" asp-route-actionType="@Model.ActionTypeFilter" asp-route-sortDescending="@Model.SortDescending">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize" asp-route-search="@Model.SearchQuery" asp-route-actionType="@Model.ActionTypeFilter" asp-route-sortDescending="@Model.SortDescending">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<div>
    <a asp-controller="Users" asp-action="List" class="btn btn-secondary">Back to Users</a>
</div>
